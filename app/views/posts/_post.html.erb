<div class="card p-4 mb-3">
  <div id="<%= dom_id post %>">
    <div class="row">
      <div class="col-md-6">
        <h4 class="mb-3"><%= post.title %></h4>
        <p>
          <%= post.content %>
        </p>
      </div>

      <% if post.img.present? %>
        <div class="col-md-6">
          <img src="<%= url_for(post.img) %>" alt="Post Image" class="img-fluid rounded-1">
        </div>
      <% end %>

      <hr class="my-4">

      <h5>Comentarios</h5>
      <% post.comments.each do |comment| %>
        <div class="mb-4">
          <div class="d-flex">
            <p class="m-0">Usuario:&nbsp;</p>
            <strong><%= comment.user %></strong>
          </div>
          <div>
            <%= comment.content %>
          </div>
        </div>
      <% end %>

    <div class="d-flex align-items-center gap-2">
      <%= form_with(model: Like.new, url: likes_path, method: :post, local: true, id: 'like-form') do |form| %>
        <%= form.button type: 'submit', class: 'btn btn-primary', id: 'like-button' do %>
          <%= fa_icon('thumbs-up') %>
          Like
        <% end %>
      <% end %>

      <div id="likes-container">
        <%= pluralize(Like.count, 'like') %>
      </div>
    </div>


      <hr class="my-2">

      <div class="mt-4 card p-4 custom-container">
        <%= form_with(model: [post, Comment.new], url: post_comments_path(post), class: 'd-flex gap-2 flex-column') do |form| %>
          <div class="form-group mb-2">
            <%= form.label :user, 'Usuario' %>
            <%= form.text_field :user, class: 'form-control', placeholder: 'Nombre de usuario' %>
          </div>
          <div class="form-group mb-2">
            <%= form.label :content, 'Comentario' %>
            <%= form.text_area :content, class: 'form-control', placeholder: 'Escribe tu comentario' %>
          </div>
          <div>
            <%= form.submit 'Enviar', class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>



