<% if notice %>
  <div class="alert alert-success" role="alert" id="success-alert">
    <p class="m-0" style="color: green"><%= notice %></p>
  </div>
<% end %>


<%= render @post %>

<div class="d-flex justify-content-center">
  <div class="d-flex gap-2 mb-4">
    <%= link_to "Editar", edit_post_path(@post), class: "btn btn-primary" %>
    <%= link_to "Volver", posts_path, class: "btn btn-outline-secondary" %>
    <%= button_to "Eliminar", @post, method: :delete, class: "btn btn-danger" %>
  </div>
</div>

<script>
  setTimeout(function() {
    var successAlert = document.getElementById('success-alert');
    if (successAlert) {
      successAlert.remove();
    }
  }, 6000);
</script>
